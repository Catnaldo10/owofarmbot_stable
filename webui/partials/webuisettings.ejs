<div class="popup" id="webui-settings-popup">
    <div class="popup-header">WebUI Settings</div>
    <div class="popup-body">
        <div class="background-option">
            <label>Background:</label>
            <div class="background-list">
                <img
                    src="./assets/image/1.jpg"
                    alt="Background 1"
                    onclick="selectBackground(this, './assets/image/1.jpg')"
                    class="background-item"
                />
                <img
                    src="./assets/image/2.jpg"
                    alt="Background 2"
                    onclick="selectBackground(this, './assets/image/2.jpg')"
                    class="background-item"
                />
                <video
                    src="./assets/video/1.mp4"
                    alt="Background 3"
                    onclick="selectBackground(this, './assets/video/1.mp4')"
                    loop
                    muted
                    autoplay
                    class="background-item background-video"
                ></video>
                <video
                    src="./assets/video/2.mp4"
                    alt="Background 4"
                    onclick="selectBackground(this, './assets/video/2.mp4')"
                    loop
                    muted
                    autoplay
                    class="background-item background-video"
                ></video>
                <video
                    src="./assets/video/3.mp4"
                    alt="Background 5"
                    onclick="selectBackground(this, './assets/video/3.mp4')"
                    loop
                    muted
                    autoplay
                    class="background-item background-video"
                ></video>
                <video
                    src="./assets/video/4.mp4"
                    alt="Background 6"
                    onclick="selectBackground(this, './assets/video/4.mp4')"
                    loop
                    muted
                    autoplay
                    class="background-item background-video"
                ></video>
                <video
                    src="./assets/video/5.mp4"
                    alt="Background 7"
                    onclick="selectBackground(this, './assets/video/5.mp4')"
                    loop
                    muted
                    autoplay
                    class="background-item background-video"
                ></video>
            </div>
        </div>
    </div>
    <div class="popup-footer">
        <button class="btn btn-secondary" onclick="closePopup()">Close</button>
    </div>
</div>
